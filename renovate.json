{
  "$schema" : "https://docs.renovatebot.com/renovate-schema.json",
  "extends" : [
    "config:base"
  ],
  "rebaseWhen" : "conflicted",
  "rebaseLabel" : "rebase",
  "semanticCommits": "enabled",
  "packageRules" : [
    {
      "groupName": "Kotlin and compiler plugins",
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin:",
        "com.google.devtools.ksp:",
        "com.square.anvil:",
        "dev.drewhamilton.poko:"
      ]
    },
    {
      "groupName": "KtLint libs",
      "matchPackagePrefixes": [
        "com.pinterest.ktlint:",
        "com.rickbusarow.ktlint:",
        "com.rickbusarow.ktrules:"
      ]
    },
    {
      "matchPackagePatterns" : [
        "^com\\.pinterest\\.ktlint:ktlint-"
      ],
      "matchCurrentVersion" : "/0\\.(?:47|48|49|50|)\\..*/",
      "enabled" : false
    },
    {
      "matchPackagePatterns" : [
        "^com\\.pinterest\\.ktlint:ktlint-"
      ],
      "matchCurrentVersion" : "1.0.1",
      "enabled" : false
    },
    {
      "matchPackagePatterns" : [
        "^com\\.pinterest\\.ktlint:(?:[\\w-]+)$",
        "^com\\.rickbusarow\\.ktlint:(?:[\\w-]+)$",
        "^com\\.rickbusarow\\.ktrules:(?:[\\w-]+)$"
      ],
      "groupName" : "KtLint Libs"
    }
  ],
  "labels" : [
    "dependencies",
    "automerge"
  ]
}
